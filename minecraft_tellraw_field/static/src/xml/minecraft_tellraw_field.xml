<?xml version="1.0" encoding="utf-8" ?>
<templates id="minecraft_tellraw_field_templates" xml:space="preserve">

    <t t-name="FieldMinecraftTellraw">
        <div class="dropdown">
            <a
        class="btn btn-primary dropdown-toggle"
        href="#"
        role="button"
        id="dropdownMenuLink"
        data-toggle="dropdown"
        aria-haspopup="true"
        aria-expanded="false"
      >
                Add Text
            </a>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                <button class="dropdown-item" name="text">Text</button>
                <button class="dropdown-item" name="lineBreak">Line Break</button>
            </div>
        </div>
    </t>

    <t t-name="FieldMinecraftTellrawText">
        <div class="form-group">
            <label for="text">Text</label>
            <input
        type="text"
        class="form-control"
        id="text"
        name="text"
        placeholder="Text"
      />
        </div>
    </t>

</templates>
